{% extends 'layout.html.twig' %}

{% block title %}
  Admin Sous-Catégorie |
  {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
<section class="container-fluid mt-4">
    <h1 class="text-center">Admin des sous-catégories</h1>
    <div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
        {% for subCategorie in subCategories %}
        <div class="blog-card mt-0">
          <div class="blog-card-content">
            <div class="row align-items-center">
              <div class="col-md-6">{{ subCategorie.titre }}</div>
              <div class="col-md-6" style="color:{{ subCategorie.color }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-square-fill" viewBox="0 0 16 16">
                  <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2z" />
                </svg>
              </div>
              <div class="row">
                <div class="col-md-6">
                  {# <a href="{{ path('app_sub_categorie_edit', { id: subCategorie.id }) }}" class="btn btn-warning text-light">Modifier</a> #}
                </div>
                <div class="col-md-6">
                  {% include 'Backend/SubCategorie/_delete_form.html.twig' %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
</section>
{% endblock %}
