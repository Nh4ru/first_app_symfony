{% extends 'layout.html.twig' %}

{% block title %}
  Edition user |
  {{ user.prenom }}
  {{ user.nom }}
  {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
  <div class="container-fluid mt-4">
    <div class="card w-50 mx-auto p-3">
      <h1 class="text-center">
        Modification
        {{ user.prenom }}
        {{ user.nom }}
      </h1>
      {% include 'Backend/User/_form.html.twig' with { button_label: 'Modifier' } %}
    </div>
  </div>
{% endblock %}
