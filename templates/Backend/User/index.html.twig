{% extends 'layout.html.twig' %}

{% block title %}
  User Catégorie |
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
  <section class="container mt-4">
    <h1 class="text-center">Admin des utilisateur</h1>
    <div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
      {% for user in users %}
        <div class="blog-card mt-0">
          <div class="blog-card-content">
            <div class="row align-items-center">
              <div class="col-md-6">{{ user.username }}</div>
              <div class="row">
              <div class="col-md-6">{{ user.nom}}</div>
              </div>
              <div class="row">
              <div class="col-md-6">{{ user.prenom}}</div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <a href="{{ path('app_user_edit', { id: user.id }) }}" class="btn btn-warning">Modifier</a>
                </div>
                <div class="col-md-6">
                  {% include 'Backend/User/_delete_form.html.twig' %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
  </section>
{% endblock %}
