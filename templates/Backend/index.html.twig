{% extends "layout.html.twig" %}

{% block title %}
    Admin |
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <h1>Bienvenue sur l'admin de l'app Symfony</h1>
        <div class="row mt-4">
            <div class="col-md-6">
                <h2 class="text-center">Liste des users</h2>
                {% for user in users %}
                    <div class="card">
                        <h3 class="card-header">
                            {{ user.prenom }}
                            {{ user.nom }}
                        </h3>
                        <div class="card-body">
                            <p class="card-text">{{ user.age }}ans</p>
                            <p class="card-text">{{ user.ville }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Liste des Articles</h2>
            </div>
        </div>
    </div>
{% endblock %}