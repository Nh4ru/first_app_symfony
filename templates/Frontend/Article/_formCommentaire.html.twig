<div class="comment card p-3 mb-4">
  <h2>Ajouter un commentaire</h2>
  {% if app.user %}
    {{ form_start(form) }}
    {{ form_row(form.note) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.content) }}
    {{ form_row(form.rgpd) }}
    <button class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}
  {% endif %}
</div>
