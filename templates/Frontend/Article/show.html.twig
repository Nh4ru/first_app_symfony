{% extends 'layout.html.twig' %}

{% block title %}
  {{ article.titre }}
  |
  {{ parent() }}
{% endblock %}

{% block body %}
  {% if (article.images|length) > 1 %}
    {% include 'Frontend/Article/_swiper.html.twig' %}
  {% elseif (article.images|length) == 1 %}
    {% include 'Frontend/Article/_banner.html.twig' %}
  {% else %}
    <div class="row text-center mt-4">{{ article.titre }}</div>
  {% endif %}
  <section class="container mt-4">
    <div class="article-main-content">
      {% include 'Frontend/Article/_sidebar.html.twig' %}
      {% include 'Frontend/Article/_content.html.twig' %}
    </div>
  </section>
{% endblock %}
